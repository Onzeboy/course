@model course.Models.Cart

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Корзина</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductsHistoryID" class="control-label">Название</label>
                <select asp-for="ProductsHistoryID" class ="form-control" asp-items="ViewBag.ProductsID"></select>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
