@model course.Models.Cart

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>

<h4>Корзина</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="userID" class="control-label">Пользователь</label>
                <input asp-for="userID" class="form-control" />
                <span asp-validation-for="userID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductsHistoryID" class="control-label">Название</label>
                <select asp-for="ProductsHistoryID" class="form-control" asp-items="ViewBag.ProductsID"></select>
                <span asp-validation-for="ProductsHistoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
