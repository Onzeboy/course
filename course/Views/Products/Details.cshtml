@model course.Models.Products

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <h4>Товары<h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameP)
        </dd>
        <dt class = "col-sm-2">
           Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dd class="col-sm-4">
            @if (!string.IsNullOrEmpty(Model.image))
            {

                <img src="@Model.image" alt="Изображение" class="img-fluid" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>
