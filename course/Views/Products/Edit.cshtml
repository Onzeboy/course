@model course.Models.Products

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>

<h4>Товары<h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="NameP" class="control-label">Название</label>
                <input asp-for="NameP" class="form-control" />
                <span asp-validation-for="NameP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label">Цена</label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <input type="hidden" name="imageURL" value="@Model.image" />
            @if (!string.IsNullOrEmpty(Model.image))
            {
                <img src="@Model.image" alt="Изображение" class="img-fluid" />
            }
            <div class="form-group">
                <div class="mt-4">
                    <input type="file" name="upload" class="form-control" /><br>
                </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
